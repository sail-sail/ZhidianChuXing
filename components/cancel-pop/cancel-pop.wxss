/* 颜色变量 */
.popDialog {
  padding: 56rpx 40rpx 50rpx;
  text-align: center;
}
.popDialog .pop_title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
}
.popDialog .content {
  margin: 40rpx 66rpx;
  color: #656565;
}
.popDialog .content .color {
  color: #FF622D;
}
.popDialog .pop_operation {
  display: flex;
  justify-content: space-between;
}
.popDialog .pop_operation .btn {
  width: 264rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 10rpx;
  font-size: 32rpx;
}
.popDialog .pop_operation .btn_cancel {
  border: 2rpx solid #E7E7E7;
  margin-right: 30rpx;
}
.popDialog .pop_operation .btn_confirm {
  background: #00BC7E;
  color: #fff;
}

